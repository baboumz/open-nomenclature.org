<?xml version="1.0" encoding="UTF-8"?>
<nomenclatures xmlns="http://www.ekylibre.org/XML/2013/nomenclatures">
  <nomenclature name="event_natures-root">
    <property-natures>
      <property-nature name="default_duration" type="integer" required="true" default="60"/>
    </property-natures>
    <items>
      <item name="meeting"/>
      <item name="production_intervention"/>
      <item name="administrative_intervention"/>
      <item name="absence"/>
    </items>
  </nomenclature>

  <nomenclature name="event_natures-meeting">
    <items>
      <item name="business_meal"/>
      <item name="working_group"/>
      <item name="staff_meeting"/>
      <item name="appointment"/>
    </items>
  </nomenclature>

  <nomenclature name="event_natures-administrative_intervention">
    <items>
      <item name="sale_creation" default_duration="10"/>
      <item name="sale_invoice_creation" default_duration="10"/>
      <item name="incoming_delivery_creation" default_duration="10"/>
      <item name="outgoing_delivery_creation" default_duration="10"/>
      <item name="mailing" default_duration="30"/>
    </items>
  </nomenclature>

  <nomenclature name="event_natures-absence">
    <items>
      <item name="leave"/>
      <item name="sickness"/>
    </items>
  </nomenclature>

  <nomenclature name="event_natures-leave">
    <items>
      <item name="unpaid_leave"/>
      <item name="paid_leave"/>
      <item name="parental_leave"/>
      <item name="sickness_leave"/>
      <item name="maternity_leave"/>
      <item name="paternity_leave"/>
      <item name="overtime_recovery"/>
      <item name="working_time_recovery"/>
    </items>
  </nomenclature>

</nomenclatures>
